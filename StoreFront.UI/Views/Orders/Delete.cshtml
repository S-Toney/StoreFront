@model StoreFront.DATA.EF.Order

@{
    ViewBag.Title = "Delete";
    //TODO Add Zip Code
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this order?</h3>
<div class="container">
    <h4>Order # @Html.DisplayFor(model => model.OrderID)</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <p>
                <strong>Customer ID: @Html.DisplayFor(model => model.CustomerID)</strong><br />
                @Html.DisplayFor(model => model.C_First_Name) @Html.DisplayFor(model => model.C_Last_Name)<br />
                @Html.DisplayFor(model => model.C_Address)<br />
                @Html.DisplayFor(model => model.C_City), @Html.DisplayFor(model => model.C_State)<br />
                @Html.DisplayFor(model => model.C_Country)
            </p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
        <div class="col-md-6 col-sm-12">
            <p>
                @Html.DisplayFor(model => model.Product.ProductName)
            </p>
            <p>
                @Html.DisplayNameFor(model => model.Total)<br />
                $@Html.DisplayFor(model => model.Total)
            </p>  
        </div>
    </div>
</div>
