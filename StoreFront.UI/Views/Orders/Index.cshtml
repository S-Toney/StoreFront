@model IEnumerable<StoreFront.DATA.EF.Order>

@{
    ViewBag.Title = "Orders";
    //TODO Add Zip Code
}

<div class="p-2">
    <h2 class="mt-5">@ViewBag.Title</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Order ID
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Address
            </th>
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
                Country
            </th>
            <th>
                Order Total
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a href="@Url.Action("Details", "Orders", new { id = item.OrderID })">
                    @Html.DisplayFor(modelItem => item.OrderID)
                </a>
            </td>
            <td>
                <a href="@Url.Action("Details", "Customer", new { id = item.CustomerID})">
                    @Html.DisplayFor(modelItem => item.C_First_Name)
                    @Html.DisplayFor(modelItem => item.C_Last_Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C_City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C_State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C_Country)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Orders", new { id = item.OrderID })"><i class="fas fa-edit mr-2"></i></a>
                <a href="@Url.Action("Delete", "Orders", new { id = item.OrderID})"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
        }

    </table>
</div>
