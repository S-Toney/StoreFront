@model StoreFront.UI.Models.ContactViewModel
@{
    ViewBag.Title = "Send us a message";
}
<hgroup>
    <h2 class="text-uppercase mt-2">@ViewBag.Title</h2>
</hgroup>

@if (ViewBag.ErrorMessage != null)
{
    <h3 class="test-danger">@Html.Raw(ViewBag.ErrorMessage)</h3>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <form id="contactform">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-row">
                <div class="col">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control m-3 shadow-sm", @placeholder = "First Name" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
                <div class="col">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control m-3 shadow-sm", @placeholder = "Last Name" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control m-3 shadow-sm", @placeholder = "Your email address" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control m-3 shadow-sm", @placeholder = "Subject" } })
                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control m-3 shadow-sm", @placeholder = "Your message..." } })
                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                <input type="submit" name="submit button" value="Send Message" class="btn btn-info button mx-4 my-2" />
            </div>
        </form>

}


