@model StoreFront.DATA.EF.Category

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "CategoryCreateForm" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <p>Enter the new Category Name:</p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger", placeholder = "Category Name" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
