@model StoreFront.DATA.EF.Category

@{
    ViewBag.Title = "Details";
}


<div class="p-2">
    <h2 class="mt-5">@Html.DisplayFor(model => model.CategoryName)</h2>
    <table class="table">
        @foreach (var item in Model.Products)
        {
            <tr>
                <td><a href="@Url.Action("Details", "Products", new { id = item.ProductID})">@item.ProductName</a></td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryID }) |
    @Html.ActionLink("Back to List", "Index")
</p>