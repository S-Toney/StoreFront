@model StoreFront.DATA.EF.Employee

@{
    ViewBag.Title = "Employee Details";
}

<div class="p-2">
    <h2 class="mb-3">@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-4 offset-2">
            <dl class="dl-horizontal mr-3">
                <dt>
                    @Html.DisplayFor(model => model.EmpFName) @Html.DisplayFor(model => model.EmpLName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EmpAddress)
                </dd>
                <dd>
                    @Html.DisplayFor(model => model.EmpCity), @Html.DisplayFor(model => model.EmpState)
                </dd>
                <dd>
                    @Html.DisplayFor(model => model.EmpCountry)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    Department
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Department.DaptName)
                </dd>

                <dt>
                    Manager
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Employee1.EmpFName)
                </dd>
                @Html.ActionLink("Edit", "Edit", new { id = Model.EmployeeID }) |
                @Html.ActionLink("Back to List", "Index")
            </dl>
        </div>
    </div>
</div>